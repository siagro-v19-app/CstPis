<mvc:View controllerName="br.com.idxtecCstPis.controller.CstPis"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true"
	xmlns="sap.m"
	height="100%"
	width="100%"
	xmlns:t="sap.ui.table">
	<App>
		<pages>
			<Page showHeader="false">
				<content>
					<VBox class="sapUiSmallMargin">
						<Panel headerText="CST - PIS">
							<t:Table id="tableCstPis"
								rows="{path: '/CstPiss'}"
								selectionMode="Single"
								selectionBehavior="Row"
								enableSelectAll="false"
								editable="true"
								visibleRowCountMode="Interactive"
								enableBusyIndicator="true"
								alternateRowColors="true"
								enableCustomFilter="false">
								<t:toolbar>
									<Toolbar>
										<Title text="Lista de CST - PIS"/> 
									</Toolbar>
								</t:toolbar>
								<t:columns>
									<t:Column filterProperty="Codigo" sortProperty="Codigo">
										<Label text="Código"/>
										<t:template>
											<Text text="{Codigo}"/>
										</t:template>
									</t:Column>
									<t:Column filterProperty="Descricao" sortProperty="Descricao">
										<Label text="Descrição"/>
										<t:template>
											<Text text="{Descricao}"/>
										</t:template>
									</t:Column>
								</t:columns>
								<t:footer>
									<Toolbar>
										<Button icon="sap-icon://refresh" press="onRefresh"/>
										<ToolbarSpacer/>
										<Button icon="sap-icon://filter"/>
										<Button icon="sap-icon://clear-filter"/>
									</Toolbar>
								</t:footer>
							</t:Table>
						</Panel>
					</VBox> 
				</content>
				<footer>
					<Toolbar>
						<ToolbarSpacer/>
						<Button icon="sap-icon://add" id="incluir" text="Incluir novo" press="onIncluir"/>
						<Button icon="sap-icon://edit" id="editar" text="Editar" press="onEditar"/>
						<Button icon="sap-icon://delete" id="remover" text="Remover" press="onRemover"/>
					</Toolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>