<mvc:View controllerName="br.com.idxtecCstPis.controller.CstPis"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true"
	xmlns="sap.m"
	height="100%"
	width="100%"
	xmlns:t="sap.ui.table">
	<App>
		<pages>
			<Page showHeader="false" class="sapUiContentPadding" enableScrolling="false">
				<content>
					<t:Table id="tableCstPis"
						rows="{
							path: '/CstPiss',
							sorter: {
								path: 'Codigo'
							}
						}"
						selectionMode="Single"
						selectionBehavior="Row"
						class="sapUiSizeCondensed"
						visibleRowCountMode="Auto"
						enableBusyIndicator="true"
						alternateRowColors="true">
						<t:toolbar>
							<Toolbar>
								<Title text="Lista de PIS"/>
								<ToolbarSpacer/>
								<SearchField placeholder="Pesquisar PIS..." width="30%" search="filtraPis"/>
							</Toolbar>
						</t:toolbar>
						<t:columns>
							<t:Column filterProperty="Codigo" sortProperty="Codigo">
								<Label text="Código"/>
								<t:template>
									<Text text="{Codigo}"/>
								</t:template>
							</t:Column>
							<t:Column filterProperty="Descricao" sortProperty="Descricao">
								<Label text="Descrição"/>
								<t:template>
									<Text text="{Descricao}"/>
								</t:template>
							</t:Column>
						</t:columns>
					</t:Table>
				</content>
				<footer>
					<Toolbar>
						<ToolbarSpacer/>
						<Button id="incluir" text="Incluir novo" press="onIncluir" type="Emphasized"/>
						<Button id="editar" text="Editar" press="onEditar"/>
						<Button id="remover" text="Remover" press="onRemover"/>
						<ToolbarSeparator/>
						<Button icon="sap-icon://refresh" press="onRefresh"/>
					</Toolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>